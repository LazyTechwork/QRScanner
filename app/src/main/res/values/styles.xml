<resources>

    <!-- Base application theme. -->
    <style name="LauraTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/azure_300</item>
        <item name="background">@color/gray_40</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ttcommons</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>

        <item name="android:elevation">3dp</item>
    </style>

    <style name="LauraTheme.Dark" parent="LauraTheme">
        <item name="colorAccent">@color/sky_300</item>
        <item name="background">@color/gray_900</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ttcommons</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>

        <item name="android:elevation">3dp</item>
    </style>

</resources>
