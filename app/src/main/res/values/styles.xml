<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LiteProue">
        <item name="backgroundPrimary">@color/white</item>
        <item name="backgroundSecondary">@color/gray_20</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/azure_300</item>
        <item name="buttonPrimaryBackground">@color/azure_A400</item>
        <item name="buttonPrimaryForeground">@color/white</item>
    </style>

    <style name="LiteProue.Dark" parent="LiteProue">
        <item name="backgroundPrimary">@color/gray_900</item>
        <item name="backgroundSecondary">@color/gray_850</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/sky_300</item>
        <item name="buttonPrimaryBackground">@color/gray_100</item>
        <item name="buttonPrimaryForeground">@color/gray_900</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
